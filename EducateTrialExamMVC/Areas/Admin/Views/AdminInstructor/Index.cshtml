
@{
    ViewData["Title"] = "Instructor CRUD";
}

@section Scripts {
    <script src="js/demo/datatables-demo.js"></script>
}

@model IEnumerable<AdminInstructorListVM>

<!-- Begin Page Content -->
<div class="container-fluid">

    @* <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">
        DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
                                                                   href="https://datatables.net">official DataTables documentation</a>.
    </p> *@

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Instructors Table</h6>
            <a class="btn btn-outline-success">Create</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered"  width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Profession</th>
                            <th>Image</th>
                            <th colspan="2" style="text-align:center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" style="text-align:center">NO DATA</td>
                            </tr>
                        } else
                        {
                            foreach(var instructor in Model)
                            {
                                <tr>
                                    <td>@instructor.Id</td>
                                    <td>@instructor.Name</td>
                                    <td>@instructor.Surname</td>
                                    <td>@instructor.Profession</td>
                                    <td><img src="~/@instructor.ImgUrl" width="100" length="100"></td>
                                    <td><a class="btn btn-outline-danger">Delete</a></td>
                                    <td><a class="btn btn-outline-info">Update</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
